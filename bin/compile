#!/usr/bin sh
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing festival"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://festvox.org/packed/festival/2.4/festival-2.4-release.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/festival.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/festival/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/festival/lib"' >> $PROFILE_PATH

